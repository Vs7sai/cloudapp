<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray">

    <!-- Top Bar with Progress -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <!-- Search Bar - Left Side (Responsive) -->
        <LinearLayout
            android:id="@+id/search_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/search_background"
            android:padding="10dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="6dp"
            android:gravity="center_vertical"
            android:elevation="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔍"
                android:textSize="16sp"
                android:layout_marginEnd="10dp"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/search_question_input"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:hint="Q#"
                android:textColorHint="#666666"
                android:textColor="#000000"
                android:textSize="15sp"
                android:background="@drawable/search_input_background"
                android:inputType="number"
                android:maxLength="2"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:textStyle="bold"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:elevation="2dp"
                android:textCursorDrawable="@android:color/transparent"
                android:textIsSelectable="true"
                android:selectAllOnFocus="false"
                android:scrollHorizontally="false"
                android:scrollbars="none"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:importantForAccessibility="yes"
                android:importantForAutofill="yes"
                android:longClickable="false"
                android:contextClickable="false"
                android:breakStrategy="simple"
                android:hyphenationFrequency="none" />

        </LinearLayout>

        <!-- Progress and Difficulty - Right Side -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginStart="6dp">

            <TextView
                android:id="@+id/progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/progress_background"
                android:text="1 of 3"
                android:textColor="#FFD700"
                android:textSize="13sp"
                android:padding="8dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/difficulty_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beginner"
                android:textColor="#FFD700"
                android:textSize="13sp" />

        </LinearLayout>

        <!-- Bookmark icon -->
        <TextView
            android:id="@+id/bookmark_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="🔖"
            android:textSize="20sp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <!-- Left Navigation Arrow -->
    <ImageView
        android:id="@+id/btn_previous"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_chevron_left"
        android:background="@drawable/arrow_background_visible"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:padding="6dp"
        android:scaleType="centerInside"
        android:elevation="6dp" />

    <!-- Right Navigation Arrow -->
    <ImageView
        android:id="@+id/btn_next"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_chevron_right"
        android:background="@drawable/arrow_background_visible"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:padding="6dp"
        android:scaleType="centerInside"
        android:elevation="6dp" />

    <!-- Main Content with Refresh (Only for top-level refresh) -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_bar"
        android:layout_above="@+id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="0dp">

            <!-- Question Card - Positioned at top with full width -->
            <androidx.cardview.widget.CardView
                android:id="@+id/question_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/purple_500"
                android:layout_marginTop="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:minHeight="140dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/question_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="What is AWS?"
                        android:textColor="@color/white"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:lineSpacingExtra="4dp"
                        android:minHeight="80dp" />

                    <!-- Pagination dots -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="12dp">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:background="@drawable/dot_selected"
                            android:layout_marginEnd="6dp" />

                        <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:background="@drawable/dot_unselected"
                            android:layout_marginEnd="6dp" />

                        <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:background="@drawable/dot_unselected" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Explanation Card - Connected to Question Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/explanation_card"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/white">

                <!-- Scroll Hint Text -->
                <TextView
                    android:id="@+id/scroll_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📜 Scroll to read full answer"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="#F0F0F0"
                    android:visibility="gone" />

                <ScrollView
                    android:id="@+id/answer_scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    android:scrollbars="vertical"
                    android:fadeScrollbars="false"
                    android:overScrollMode="always">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:paddingTop="44dp"
                        android:paddingBottom="24dp">

                        <TextView
                            android:id="@+id/explanation_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Amazon Web Services (AWS) is a comprehensive cloud computing platform provided by Amazon. It offers a wide range of services including computing power, storage, databases, networking, analytics, machine learning, and more, delivered on-demand over the internet."
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>

                </ScrollView>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Bottom Navigation with Difficulty Levels -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_beginner"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_glass_selected"
            android:text="@string/beginner"
            android:textColor="#F0000000"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_medium"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/button_glass_unselected"
            android:text="@string/medium"
            android:textColor="#C0000000"
            android:textSize="15sp"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_pro"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/button_glass_unselected"
            android:text="@string/pro"
            android:textColor="#C0000000"
            android:textSize="15sp"
            android:textAllCaps="false" />

    </LinearLayout>
</RelativeLayout>
